<h1>Everyone's posts</h1>

<% if logged_in? %>
<% else %>
  Only
  <%= link_to "members", '/login' %>
  can view the author.
<% end %>
<table class = "table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <% if logged_in? %>
        <% author = User.find_by(id: post.user_id) %>
        <td><%= author.name %></td>
      <% end %>
    </tr>

  <% end %>
</table>